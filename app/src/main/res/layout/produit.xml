<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="6dp"
    android:background="@color/space_card"
    android:elevation="4dp"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="@color/space_card"
    android:shape="rectangle">

    <ImageView
        android:id="@+id/imageProduit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/btn_space"
        android:contentDescription="Image du produit"/>

    <TextView
        android:id="@+id/textProduit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:text="Nom du produit"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
</LinearLayout>
