<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_background"
    android:padding="16dp">

    <!-- HEADER -->
    <TextView
        android:id="@+id/txtHistoriqueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historique Alimentaire"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CalendarView -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#F5F5F5"
        app:layout_constraintTop_toBottomOf="@id/txtHistoriqueTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <CalendarView
        android:id="@+id/calendarHistorique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dateTextAppearance="@android:style/TextAppearance.Small"
        android:focusedMonthDateColor="#000000"
        android:unfocusedMonthDateColor="#777777"
        android:selectedDateVerticalBar="@color/space_accent"
        android:selectedWeekBackgroundColor="@color/space_accent"/>
</androidx.cardview.widget.CardView>



    <!-- BOTTOM BAR -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/space_card"
        android:padding="8dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/bnthistorique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_space"
            android:textColor="@android:color/white"
            android:text="Accueil"/>

        <Button
            android:id="@+id/bntjournee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_space"
            android:textColor="@android:color/white"
            android:text="Ajouter Repas"/>

        <Button
            android:id="@+id/bntcalendrier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_space"
            android:textColor="@android:color/white"
            android:text="Statistiques"/>

        <Button
            android:id="@+id/btnProfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_space"
            android:textColor="@android:color/white"
            android:text="Profil"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
