<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="6dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center_vertical"
    android:background="@color/space_card"
    android:elevation="4dp"
    android:clipToPadding="false"
    android:shape="rectangle">

    <!-- Image produit -->
    <ImageView
        android:id="@+id/imageProduit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"
        android:contentDescription="Image du produit"
        android:background="@drawable/btn_space"/>

    <!-- Nom du produit -->
    <TextView
        android:id="@+id/textProduit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:text="Nom du produit"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <!-- Valeur du produit -->
    <TextView
        android:id="@+id/textValeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="0"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <!-- Bouton Ajouter -->
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_space"
        android:padding="8dp"
        app:srcCompat="@android:drawable/ic_menu_add"
        android:contentDescription="Ajouter"/>
</LinearLayout>
